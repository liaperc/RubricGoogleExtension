{
    "name": "Nueva Canvas to Rubric Extension",
    "version": "0.1.0",
    "manifest_version": 3,
    "description": "TBD",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "https://canvas.instructure.com/*",
        "https://*.canvas-user-content.com/*",
        "https://*.cluster*.canvas-user-content.com/*"
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
        "matches": [
            "https://canvas.instructure.com/courses/*/gradebook*",
            "https://*.instructure.com/courses/*/gradebook*"
        ],
        "js": ["scripts/content.js"],
        "run_at": "document_end"
        }
    ],
    
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    }
}